---
import "@fontsource-variable/fredoka";
import Box from "./Box.astro";
import { Icon } from "astro-icon/components";
import Features from "./Features.astro";
// import profile from "../profile";
// import GitStats from "./GitStats.astro";

interface Props extends Project {
  lang: string;
}

const {
  lang = "en",
  url,
  name,
  forks = 0,
  stars = 0,
  description,
  features,
} = Astro.props;
---

<div class="first:py-2 py-3 font-fredoka flex flex-col gap-1">
  <div class="w-full text-xl font-light flex items-center">
    <a href={url} class="flex items-center">
      <div
        class="tracking-wider text-2xl text-right text-white py-1 flex items-center gap-1 hover:text-orange-500"
      >
        <Icon name="mdi:book-multiple" class="" />
        {name}
      </div>
    </a>
  </div>
  <div class="text-sm font-light text-gray-400">Jul 12, 2022</div>
</div>

<div
  class="lg:p-10 p-6 gap-8 items-stretch grid lg:grid-cols-2 grid-cols-1 bg-gray-900/60 border border-orange-600/50 hover:border-orange-600 rounded-ss-xl rounded-ee-xl"
>
  <div class="font-normal text-2xl">Description</div>
  <div class="font-normal text-2xl lg:block hidden">Features</div>
  <Box content={description[lang]} url={url} />
  <div class="font-normal text-2xl lg:hidden block">Features</div>
  <Features features={features} />
</div>
<a
  href={url}
  class="bg-orange-600 text-white rounded-md w-fit px-2 py-1 flex items-center gap-2"
  target="_blank"
>
  Visit
  <Icon name="mdi:arrow-right" class="text-base -rotate-45" />
</a>

<div
  class="max-w-32 mx-auto w-full border-b border-orange-600 last:border-b-0 pt-5"
>
</div>
<style is:global>
  .font-fredoka {
    font-family: "Fredoka Variable", sans-serif;
  }
</style>

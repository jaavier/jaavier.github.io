---
import { Icon } from "astro-icon/components";
interface Props {
  forks: number;
  stars: number;
}
const { forks, stars } = Astro.props;
---

<div class="flex justify-center gap-5 font-fredoka font-light">
  <div class="flex items-center gap-1">
    <div>
      <Icon name="mdi:source-fork" />
    </div>
    <div>{forks}</div>
  </div>
  <div class="flex items-center gap-1">
    <div class="text-xl">
      <Icon name="mdi:star-outline" />
    </div>
    <div>{stars}</div>
  </div>
</div>
